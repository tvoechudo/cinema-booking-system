<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    </head>

    <body>
        <div class="container">
            <nav class="navbar navbar-inverse">
                <div class="container-fluid">
                  <div class="navbar-header">
                    <a class="navbar-brand" href="/movies">CinemaProject</a>
                  </div>
                  <ul class="nav navbar-nav">
                    <li class="active"><a href="/movies">Movies</a></li>
                    <li><a href="/sessions">Showtimes</a></li>
                    <li><a href="/mybooking"> My booking</a></li>
                  </ul>                
                  <form class="navbar-form navbar-right" action='/movies/find' method="GET">
                    <div class="input-group">                                             
                        <input type ='text' name='m_name' id='m_name' class="form-control" placeholder='Enter movie name'>
                        <div class="input-group-btn">
                            <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                        </div>
                    </div>
                </form>
                </div>
            </nav>

            <div class="page-header">
                <h1>Movies</h1>
            </div> 
            <div class="row">
            <% for(var i=0; i<allthemovies.length; i++){ %>
                <div class="col-sm-4">
                    <h3 class="text-center"> <%= allthemovies[i].m_name %></h3>
                    <div class="text-center">
                    <a href='/movies/movie/<%= allthemovies[i].m_name %>'><img src='<%= allthemovies[i].m_poster %> ' height='300' width='200'></a> <br>
                    </div>
                    <p class="text-center"> <%= allthemovies[i].m_type %> </p>
                </div>
            <% } %>
            </div>
            <br><br>  

            <div class="navbar navbar-inverse ">
                <div class="container">
                    <p class="navbar-text ">2021 © Copyright</p>
                 </div>
            </div>
        </div>
    </body>
</html>